<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_booking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saurabh.parkhunt.Booking">

    <TextView
        android:text="Per Hour Rate :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="80dp"
        android:id="@+id/perHourRate"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="76dp"
        android:id="@+id/showPrHrRate"
        android:layout_alignTop="@+id/perHourRate"/>

    <TextView
        android:text="Select Hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@+id/perHourRate"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignStart="@+id/perHourRate"
        android:layout_marginStart="14dp"
        android:layout_marginTop="34dp"
        android:id="@+id/selectHours"/>

    <Button
        android:text="Confirm\nBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f9f4f4"
        android:textColor="@color/darkRed"
        android:textStyle="bold"
        android:layout_below="@+id/spinner"
        android:layout_alignStart="@+id/perHourRate"
        android:layout_marginTop="44dp"
        android:id="@+id/confirmBooking"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignTop="@+id/selectHours"
        android:layout_alignStart="@+id/showPrHrRate"/>

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f9f4f4"
        android:textColor="@color/darkRed"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/confirmBooking"
        android:layout_alignEnd="@+id/showPrHrRate"
        android:id="@+id/cancelBooking"/>

</RelativeLayout>
