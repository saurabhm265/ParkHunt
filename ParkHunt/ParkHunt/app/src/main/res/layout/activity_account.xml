<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saurabh.parkhunt.Account">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/profile"
        android:id="@+id/profileTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:text="Name"
        android:textStyle="bold"
        android:id="@+id/nameTextView"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/profileTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:text="Email"
        android:textStyle="bold"
        android:id="@+id/emailTextView"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/nameTextView"
        android:layout_alignEnd="@+id/nameTextView" />

    <!-- Text in the TextView below will appear programmatically -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:id="@+id/acnameText"
        android:layout_above="@+id/emailTextView"
        android:layout_alignStart="@+id/profileTextView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/acEmailText"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/emailTextView"
        android:layout_alignStart="@+id/acnameText"
        android:layout_alignEnd="@+id/acnameText" />

    <TextView
        android:text="Account \nBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:layout_below="@+id/emailTextView"
        android:layout_alignStart="@+id/emailTextView"
        android:layout_marginTop="39dp"
        android:textStyle="bold"
        android:id="@+id/tvPointsLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvPointsLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:layout_alignStart="@+id/acEmailText"
        android:layout_alignEnd="@+id/acEmailText"
        android:layout_marginStart="19dp"
        android:id="@+id/tvPointstext"/>

</RelativeLayout>
